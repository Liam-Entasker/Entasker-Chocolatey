{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "string"
        },
        "autoShutdownTime": {
            "type": "string",
            "defaultValue": "20:00"
        },
        "autoShutdownNotificationEmailAddress": {
            "type": "string"
        },
        "installVisualStudio": {
            "type": "bool",
            "metadata": {
                "description": "Install Visual Studio"
            }
        },
        "installOffice365": {
            "type": "bool",
            "metadata": {
                "description": "Install Office 365"
            }
        }
    },
    "functions": [],
    "variables": {
        "vmFullName": "[concat(parameters('vmName'), 'Win10')]",
        "storageName": "[concat(toLower(variables('vmFullName')), 'st')]",
        "storageDisplayName": "[concat(variables('vmFullName'), ' Storage Account')]",
        "publicIPName": "[concat(variables('vmFullName'), '-pip')]",
        "domainNameLabel": "[toLower(variables('vmFullName'))]",
        "virtualNetworkName": "[concat(toLower(variables('vmFullName')), '-vnet')]",
        "virtualNetworkSubnetName": "[concat(toLower(variables('vmFullName')), '-snet')]",
        "networkInterfaceName": "[concat(toLower(variables('vmFullName')), 'nic')]",
        "networkInterfaceDisplayName": "[concat(variables('vmFullName'), ' Network Interface')]",
        "osDiskName": "[concat(variables('vmFullName'), 'osdisk')]",
        "shutdownTaskName": "[concat('shutdown-computevm-', variables('vmFullName'))]"
    },
    "resources": [
        {
            "name": "[variables('storageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[variables('storageDisplayName')]"
            },
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "name": "[variables('publicIPName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "PublicIPAddress"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('domainNameLabel')]"
                }
            }
        },
        {
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "VirtualNetwork"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('virtualNetworkSubnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
            ],
            "tags": {
                "displayName": "[variables('networkInterfaceDisplayName')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('virtualNetworkSubnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('vmFullName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            ],
            "tags": {
                "displayName": "[variables('vmFullName')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D4s_v3"
                },
                "osProfile": {
                    "computerName": "[variables('vmFullName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsDesktop",
                        "offer": "Windows-10",
                        "sku": "20h2-pro-g2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('osDiskName')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2015-06-15').primaryEndpoints.blob]"
                    }
                }
            },
            "resources": [
                {
                    "name": "[variables('shutdownTaskName')]",
                    "type": "Microsoft.DevTestLab/schedules",
                    "apiVersion": "2017-04-26-preview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "status": "Enabled",
                        "taskType": "ComputeVmShutdownTask",
                        "dailyRecurrence": {
                            "time": "[parameters('autoShutdownTime')]"
                        },
                        "timeZoneId": "AUS Eastern Standard Time",
                        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', variables('vmFullName'))]",
                        "notificationSettings": {
                            "status": "Enabled",
                            "emailRecipient": "[parameters('autoShutdownNotificationEmailAddress')]",
                            "notificationLocale": "en",
                            "timeInMinutes": "30"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', variables('vmFullName'))]"
                    ]
                },
                {
                    "name": "configure-applications",
                    "type": "extensions",
                    "apiVersion": "2019-07-01",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "displayName": "configure applications"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('vmFullName'))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.10",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/Liam-Entasker/Entasker-Chocolatey/main/install-software.ps1"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "powershell.exe -ExecutionPolicy Unrestricted -File ./install-software.ps1"
                        }
                    }
                },
                {
                    "condition": "[parameters('installVisualStudio')]",
                    "name": "configure-visualstudio",
                    "type": "extensions",
                    "apiVersion": "2019-07-01",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "displayName": "configure visual-studio"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('vmFullName'))]",
                        "configure-applications"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.10",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/Liam-Entasker/Entasker-Chocolatey/main/install-software-visualstudio.ps1"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "powershell.exe -ExecutionPolicy Unrestricted -File ./install-software-visualstudio.ps1"
                        }
                    }

                },
                {
                    "condition": "[parameters('installOffice365')]",
                    "name": "configure-office365",
                    "type": "extensions",
                    "apiVersion": "2019-07-01",
                    "location": "[resourceGroup().location]",
                    "tags": {
                        "displayName": "configure Office 365"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('vmFullName'))]",
                        "configure-applications"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.10",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/Liam-Entasker/Entasker-Chocolatey/main/install-software-office365.ps1"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "powershell.exe -ExecutionPolicy Unrestricted -File ./install-software-office365.ps1"
                        }
                    }

                }
            ]
        }
    ],
    "outputs": {}
}